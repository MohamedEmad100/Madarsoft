<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Normal text size -->
    <style name="TextViewMedium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_12.5</item>
        <!--<item name="fontPath">fonts/Montserrat-Medium.ttf</item>-->
        <item name="android:fontFamily">@font/font_families</item>
    </style>

    <!-- Regular text size -->
    <style name="TextViewRegular" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_10.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="fontPath">fonts/Montserrat-Regular.ttf</item>-->
        <item name="android:fontFamily">@font/font_families</item>
    </style>

</resources>
